{
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "react/jsx-filename-extension": 0,
    "no-use-before-define": 0,
    "prettier/prettier": "error"
  },
  "globals": {
    "jest": true,
    "beforeEach": true,
    "afterEach": true,
    "describe": true,
    "it": true,
    "expect": true
  }
}
